<div class="profile-container">
    <div class="profile-header">
        <div class="profile-info">
            <div class="profile-avatar">
                <% if (userDetails.avatar) { %>
                    <img src="<%= userDetails.avatar %>" alt="Avatar">
                <% } else { %>
                    <i class="fas fa-user-circle"></i>
                <% } %>
            </div>
            <div class="profile-details">
                <h1><%= userDetails.username %></h1>
                <p class="profile-email"><%= userDetails.email %></p>
                <p class="profile-date">Дата регистрации: <%= new Date(userDetails.created_at).toLocaleDateString() %></p>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <h2>Мои посты</h2>
        <% if (posts.length > 0) { %>
            <div class="posts-grid">
                <% posts.forEach(post => { %>
                    <div class="post-card">
                        <div class="post-card-content">
                            <h3 class="post-title"><%= post.title %></h3>
                            <p class="post-date">
                                <i class="fas fa-calendar-alt"></i>
                                <%= new Date(post.created_at).toLocaleDateString() %>
                            </p>
                            <p class="post-text"><%= post.content.substring(0, 150) %>...</p>
                            <div class="post-actions">
                                <a href="/posts/<%= post.id %>" class="read-more-btn">
                                    Читать далее
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="no-posts">У вас пока нет постов</p>
        <% } %>
    </div>
</div>

<style>
.profile-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.profile-header {
    background: rgba(30, 30, 40, 0.95);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 30px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.profile-info {
    display: flex;
    align-items: center;
    gap: 30px;
}

.profile-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
}

.profile-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.profile-avatar i {
    font-size: 3em;
    color: rgba(255, 255, 255, 0.5);
}

.profile-details h1 {
    font-size: 2em;
    margin-bottom: 10px;
    color: #fff;
}

.profile-email {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 5px;
}

.profile-date {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9em;
}

.profile-content h2 {
    margin-bottom: 20px;
    color: #fff;
}

.no-posts {
    text-align: center;
    color: rgba(255, 255, 255, 0.5);
    padding: 40px;
    background: rgba(30, 30, 40, 0.95);
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Стили для сетки постов */
.posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
}

/* Стили для карточки поста */
.post-card {
    background: rgba(20, 20, 20, 0.95);
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    transition: all 0.3s ease;
    padding: 2px;
    background: linear-gradient(45deg, #ff0066, #00ffff, #ff00ff);
    background-size: 400% 400%;
    animation: gradientMove 3s ease infinite;
}

.post-card-content {
    background: rgba(15, 15, 20, 0.95);
    border-radius: 13px;
    height: 100%;
    padding: 20px;
}

.post-title {
    font-size: 1.4em;
    font-weight: 600;
    margin-bottom: 15px;
    color: #fff;
    background: linear-gradient(45deg, #ff0066, #ff00ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 15px rgba(255, 0, 255, 0.3);
}

.post-date {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9em;
    margin-bottom: 15px;
}

.post-text {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: 20px;
    font-size: 0.95em;
}

.post-actions {
    margin-top: auto;
    padding-top: 15px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.read-more-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 8px 20px;
    background: linear-gradient(45deg, #ff0066, #ff00ff);
    color: white;
    text-decoration: none;
    border-radius: 20px;
    font-size: 0.95em;
    transition: all 0.3s ease;
    width: 100%;
}

.read-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 0, 255, 0.3);
}

.read-more-btn i {
    transition: transform 0.3s ease;
}

.read-more-btn:hover i {
    transform: translateX(5px);
}

.post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(255, 0, 255, 0.2);
}

@keyframes gradientMove {
    0% { background-position: 0% 50% }
    50% { background-position: 100% 50% }
    100% { background-position: 0% 50% }
}

/* Адаптивность */
@media (max-width: 1200px) {
    .posts-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .posts-grid {
        grid-template-columns: 1fr;
    }
    
    .post-title {
        font-size: 1.2em;
    }
}
</style> 