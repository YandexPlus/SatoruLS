<div class="admin-dashboard">
    <h1 class="dashboard-title">Панель администратора</h1>

    <!-- Статистика -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
                <h3>Пользователи</h3>
                <p class="stat-number"><%= stats.users %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="stat-info">
                <h3>Посты</h3>
                <p class="stat-number"><%= stats.posts %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-comments"></i>
            </div>
            <div class="stat-info">
                <h3>Комментарии</h3>
                <p class="stat-number"><%= stats.comments %></p>
            </div>
        </div>
    </div>

    <!-- Управление пользователями -->
    <div class="admin-section">
        <h2>Управление пользователями</h2>
        <div class="admin-table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Имя</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th>Дата регистрации</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <td><%= new Date(user.created_at).toLocaleString() %></td>
                            <td>
                                <% if (user.role !== 'admin') { %>
                                    <button class="delete-btn" onclick="deleteUser(<%= user.id %>)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Управление постами -->
    <div class="admin-section">
        <h2>Управление постами</h2>
        <div class="admin-table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Заголовок</th>
                        <th>Автор</th>
                        <th>Дата создания</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(post => { %>
                        <tr>
                            <td><%= post.id %></td>
                            <td><%= post.title %></td>
                            <td><%= post.username %></td>
                            <td><%= new Date(post.created_at).toLocaleString() %></td>
                            <td>
                                <button class="delete-btn" onclick="deletePost(<%= post.id %>)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Управление комментариями -->
    <div class="admin-section">
        <h2>Управление комментариями</h2>
        <div class="admin-table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Автор</th>
                        <th>Пост</th>
                        <th>Содержание</th>
                        <th>Дата</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% comments.forEach(comment => { %>
                        <tr>
                            <td><%= comment.id %></td>
                            <td><%= comment.username %></td>
                            <td><%= comment.post_title %></td>
                            <td><%= comment.content %></td>
                            <td><%= new Date(comment.created_at).toLocaleString() %></td>
                            <td>
                                <button class="delete-btn" onclick="deleteComment(<%= comment.id %>)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
async function deleteUser(id) {
    if (confirm('Вы уверены, что хотите удалить этого пользователя?')) {
        try {
            const response = await fetch(`/admin/users/${id}`, {
                method: 'DELETE'
            });
            if (response.ok) {
                location.reload();
            }
        } catch (error) {
            console.error('Ошибка при удалении пользователя:', error);
        }
    }
}

async function deletePost(id) {
    if (confirm('Вы уверены, что хотите удалить этот пост?')) {
        try {
            const response = await fetch(`/admin/posts/${id}`, {
                method: 'DELETE'
            });
            if (response.ok) {
                location.reload();
            }
        } catch (error) {
            console.error('Ошибка при удалении поста:', error);
        }
    }
}

async function deleteComment(id) {
    if (confirm('Вы уверены, что хотите удалить этот комментарий?')) {
        try {
            const response = await fetch(`/admin/comments/${id}`, {
                method: 'DELETE'
            });
            if (response.ok) {
                location.reload();
            }
        } catch (error) {
            console.error('Ошибка при удалении комментария:', error);
        }
    }
}
