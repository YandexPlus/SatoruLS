<style>
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .post-card {
        background: rgba(20, 20, 20, 0.95);
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        transition: all 0.3s ease;
        padding: 2px;
        background: linear-gradient(45deg, #ff0066, #00ffff, #ff00ff);
        background-size: 400% 400%;
        animation: gradientMove 3s ease infinite;
    }

    .post-card-content {
        background: rgba(15, 15, 20, 0.95);
        border-radius: 13px;
        height: 100%;
        padding: 20px;
    }

    .post-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .post-author {
        display: flex;
        align-items: center;
        gap: 8px;
        color: rgba(255, 255, 255, 0.8);
    }

    .post-author i {
        color: #ff00ff;
        font-size: 1.2em;
    }

    .post-date {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.9em;
    }

    .post-image {
        width: 100%;
        height: 200px;
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        margin: 15px 0;
        transition: transform 0.3s ease;
    }

    .post-content {
        margin: 15px 0;
    }

    .post-title {
        font-size: 1.4em;
        font-weight: 600;
        margin-bottom: 15px;
        color: #fff;
        background: linear-gradient(45deg, #ff0066, #ff00ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 15px rgba(255, 0, 255, 0.3);
    }

    .post-text {
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.6;
        font-size: 0.95em;
    }

    .post-footer {
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: flex-end;
    }

    .read-more-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 20px;
        background: linear-gradient(45deg, #ff0066, #ff00ff);
        color: white;
        text-decoration: none;
        border-radius: 20px;
        font-size: 0.95em;
        transition: all 0.3s ease;
    }

    .read-more-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 0, 255, 0.3);
    }

    .read-more-btn i {
        transition: transform 0.3s ease;
    }

    .read-more-btn:hover i {
        transform: translateX(5px);
    }

    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(255, 0, 255, 0.2);
    }

    .post-card:hover .post-image {
        transform: scale(1.05);
    }

    @keyframes gradientMove {
        0% { background-position: 0% 50% }
        50% { background-position: 100% 50% }
        100% { background-position: 0% 50% }
    }

    /* Адаптивность */
    @media (max-width: 1200px) {
        .posts-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .posts-grid {
            grid-template-columns: 1fr;
        }
        
        .post-title {
            font-size: 1.2em;
        }
    }

    .welcome-section {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        text-align: center;
    }

    .welcome-title {
        font-size: 48px;
        color: #fff;
        margin-bottom: 20px;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.7);
    }

    .welcome-text {
        font-size: 24px;
        color: #fff;
        opacity: 0.8;
    }

    .search-container {
        margin: 20px auto;
        text-align: center;
        padding: 10px;
        position: relative;
    }

    .search-input {
        width: 100%;
        max-width: 350px;
        padding: 12px 20px;
        font-size: 1.1em;
        border: 2px solid #444;
        border-radius: 25px;
        background-color: rgba(30, 30, 30, 0.8);
        color: #fff;
        outline: none;
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }

    .search-input:focus {
        border-color: #ff0066;
        background-color: rgba(30, 30, 30, 1);
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }

    .search-input:focus::placeholder {
        color: rgba(255, 255, 255, 1);
    }

</style>

<div class="home-container">
    <% if (!user) { %>
        <div class="welcome-section">
            <h1 class="welcome-title">Добро пожаловать в SatoruLS</h1>
            <p class="welcome-text">Присоединяйтесь к нашему игровому сообществу!</p>
        </div>
    <% } else { %>
        <!-- Форма поиска -->
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Поиск по постам..." class="search-input" onkeyup="filterPosts()" />
        </div>

        <div class="posts-grid" id="postsGrid">
            <% posts.forEach(post => { %>
                <div class="post-card" data-title="<%= post.title.toLowerCase() %>">
                    <div class="post-card-content">
                        <div class="post-header">
                            <div class="post-author">
                                <i class="fas fa-user-circle"></i>
                                <span><%= post.username %></span>
                            </div>
                            <div class="post-date">
                                <i class="fas fa-calendar-alt"></i>
                                <span>
                                    <%= new Date(post.created_at).toLocaleDateString('ru-RU', { year: 'numeric', month: 'long', day: 'numeric' }) %> 
                                </span>
                            </div>
                        </div>

                        <!-- <% if (post.image) { %>
                            <div class="post-image" style="background-image: url('<%= post.image %>')"></div>
                        <% } %> -->

                        <div class="post-content">
                            <h2 class="post-title"><%= post.title %></h2>
                            <p class="post-text"><%= post.content.substring(0, 150) %>...</p>
                        </div>

                        <div class="post-footer">
                            <a href="/posts/<%= post.id %>" class="read-more-btn">
                                Читать далее
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<script>
    function filterPosts() {
        const input = document.getElementById('searchInput');
        const filter = input.value.toLowerCase();
        const postsGrid = document.getElementById('postsGrid');
        const posts = postsGrid.getElementsByClassName('post-card');

        for (let i = 0; i < posts.length; i++) {
            const post = posts[i];
            const title = post.getAttribute('data-title');
            
            if (title.indexOf(filter) > -1) {
                post.style.display = ''; // Показываем пост
            } else {
                post.style.display = 'none'; // Скрываем пост
            }
        }
    }
</script>
